@model List<Financial.Core.ViewModels.AssetTypeSettingType.CreateViewModel>


@using (Html.BeginForm("Create", "AssetTypeSettingType", FormMethod.Post))
{
    @Html.AntiForgeryToken()

        <h4>Linked Setting Types</h4>

        <hr />

        <div class="form-horizontal">

            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-1" style="text-align:right">
                        @Html.EditorFor(modelItem => item.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-10">
                        @Html.Label(item.SettingTypeName, new { @class = "control-label" })
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
