@model Financial.WebApplication.Models.ViewModels.ParentChildRelationshipType.DeleteViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Linked Relationship Type</h2>

<div>

    <h4>Are you sure you want to delete this linked relationship type?</h4>
    <hr />

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ParentRelationshipTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParentRelationshipTypeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ChildRelationshipTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChildRelationshipTypeName)
        </dd>

    </dl>

