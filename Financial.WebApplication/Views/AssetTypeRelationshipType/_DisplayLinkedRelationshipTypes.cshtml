@model Financial.Core.ViewModels.AssetTypeRelationshipType.DisplayParentChildRelationshipTypesViewModel

<div class="form-group">
    @Html.LabelFor(model => model.SelectedParentChildRelationshipTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(x => x.SelectedParentChildRelationshipTypeId, Model.ParentChildRelationshipTypes, "-- Select a Relationship Type --",
            new { @id = "select_relationship_type", @class = "form-control", onchange = "updateRelationshipType($(this).val())" })
        @Html.ValidationMessageFor(model => model.SelectedParentChildRelationshipTypeId, "", new { @class = "text-danger" })
    </div>
</div>