            }
        </td>
        <td style="text-align: right;">
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td class="list_links">
            @Html.ActionLink("Details", "Details", "Account", new { id = item.AssetId }, null)
